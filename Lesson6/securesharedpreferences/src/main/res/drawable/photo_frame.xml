<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="4dp"
                android:right="4dp" />
        </shape>
    </item>

    <!-- Основная рамка -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#5D4037"
                android:centerColor="#8D6E63"
                android:endColor="#5D4037"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Внутренняя обводка -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#D7CCC8" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Белая подложка для фото -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="40dp"> <!-- Место для подписи -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>