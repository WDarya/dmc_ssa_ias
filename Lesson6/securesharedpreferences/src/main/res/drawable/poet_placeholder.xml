<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Внешняя рамка (декоративная) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" /> <!-- Коричневый цвет рамки -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Внутренняя подложка (белая) -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Место для фото (прозрачный фон) -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="6dp" />
            <!-- Если фото не загружено, показываем иконку -->
        </shape>
    </item>

    <!-- Декоративные уголки -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#D2691E"
                android:dashWidth="8dp"
                android:dashGap="4dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Подпись внизу -->
    <item
        android:bottom="20dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Текст подписи -->
    <item
        android:bottom="24dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="А.С. Пушкин"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="italic" />
    </item>

</layer-list>